<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="rowLevel1" TargetType="DataGridRow">
        <Setter Property="Background" Value="#696969" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style x:Key="rowLevel2" TargetType="DataGridRow">
        <Setter Property="Background" Value="#808080" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style x:Key="rowLevel3" TargetType="DataGridRow">
        <Setter Property="Background" Value="#A9A9A9" />
        <Setter Property="Foreground" Value="Black" />
    </Style>

    <Style x:Key="rowLevel4" TargetType="DataGridRow">
        <Setter Property="Background" Value="#DCDCDC" />
        <Setter Property="Foreground" Value="Black" />
    </Style>
</ResourceDictionary>